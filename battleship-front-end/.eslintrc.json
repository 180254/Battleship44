{
  "extends": "./node_modules/gts/",
  "env": {
    "node": false,
    "browser": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 100,
        "tabWidth": 2,
        "ignoreUrls": true
      }
    ]
  }
}
